{
  "compilerOptions": {
    "types": ["node", "jest"],
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "plugins": [
      { "name": "ts-auto-mock" }
    ]
  },
  "include": ["src/**/*", "bin/**/*"],
  "exclude": ["**/*.test.ts"]
}
